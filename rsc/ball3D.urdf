<?xml version="1.0"?>
<robot name="ball2D">
	<link name="world"/>
	
  <link name="ball">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.11"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz = "0 0 0"/>
      <geometry>
        <sphere radius="0.11"/>
      </geometry>
      <material name="">
        <contact name="ball"/>
      </material>
    </collision>
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.45"/>
         <!-- https://www.miniphysics.com/uy1-calculation-of-moment-of-inertia-of-thin-spherical-shell.html -->
        <inertia ixx="0.0033" ixy="0.0" ixz="0" iyy="0.0033" iyz="0" izz="0.0033"/>
    </inertial>
  </link>

  <link name="base" >
    <inertial>
      <origin rpy = "0 0 0" xyz = "0 0 0" />
      <mass value = "0.0001" />
      <inertia ixx = "0.0001" ixy = "0" ixz = "0" iyy = "0.0001" iyz = "0" izz = "0.0001" />
    </inertial>
  </link>

  <joint name="root" type="fixed" >
    <parent link = "base" />
    <child link="ball" />
    <origin rpy = "0 0 0" xyz = "0.000000 0.000000 0.000000" />
  </joint>
</robot>