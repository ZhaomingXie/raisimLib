<?xml version="1.0"?>
<robot name="ball2D">
	<link name="world"/>
	
  <link name="ball">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.11"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz = "0 0 0"/>
      <geometry>
        <sphere radius="0.11"/>
      </geometry>
      <material name="">
        <contact name="ball"/>
      </material>
    </collision>
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.45"/>
         <!-- https://www.miniphysics.com/uy1-calculation-of-moment-of-inertia-of-thin-spherical-shell.html -->
        <inertia ixx="0.0033" ixy="0.0" ixz="0" iyy="0.0033" iyz="0" izz="0.0033"/>
    </inertial>
  </link>

  <link name="reference_1">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0"/>
        <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>

  <link name="reference_2">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0"/>
        <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>

  <link name="reference_3">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0"/>
        <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>

  <joint name="ref_world" type="fixed">
    <parent link="world"/>
    <child link="reference_1"/>
  </joint>

  <joint name="ref_plane_x" type="prismatic">
    <parent link="reference_1"/>
    <child link="reference_2"/>
    <origin xyz="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <joint name="ref_plane_z" type="prismatic">
    <parent link="reference_2"/>
    <child link="reference_3"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="ref_rot_y" type="revolute">
    <parent link="reference_3"/>
    <child link="ball"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
</robot>